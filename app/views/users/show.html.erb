<h3>スケジュール詳細</h3>
 
 <table>
   <tr>
     <th>タイトル</th>
     <td><%= @user.title %></td>
   </tr>
   <tr>
     <th>開始日</th>
     <td><%= @user.start_day %></td>
   </tr>
   <tr>
     <th>投稿日時</th>
     <td><%= @user.updated_at.to_s(:date_jp) %></td>
   </tr>
   <tr>
     <th>終日</th>
     <td>
       <% if @user.all_day == 'true' %>
         o
       <% else %>
             
       <% end %>
     </td>
   </tr>
   <tr>
     <th>スケジュールメモ</th>
     <td><%= @user.memo %></td>
   </tr>
 </table>
 
 <div>
   <ul>
     <li><%= link_to "スケジュール情報一覧に戻る", :users %></li>
   </ul>
 </div>